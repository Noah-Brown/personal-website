---
import '../styles/global.css';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  breadcrumb?: string;
  breadcrumbMeta?: string;
  activeTab?: string;
}

const {
  title,
  description = 'Personal website and blog by Noah Brown â€” IT engineer writing about infrastructure, automation, and networking.',
  breadcrumb = '~',
  breadcrumbMeta = '',
  activeTab = 'home',
} = Astro.props;

const currentPath = Astro.url.pathname;

// Dynamic sidebar counts
const allPosts = await getCollection('blog');
const sidebarCategories = ['infrastructure', 'automation', 'networking', 'ai-tools'];
const tagCounts: Record<string, number> = {};
for (const cat of sidebarCategories) {
  tagCounts[cat] = allPosts.filter(p => p.data.tags.includes(cat)).length;
}
const totalPosts = allPosts.length;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/icon-192.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://noahbrown.io" />
    <meta property="og:image" content="https://noahbrown.io/icon-512.png" />
    <meta property="og:site_name" content="noahbrown.io" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="theme-color" content="#08090e" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700;800&family=IBM+Plex+Mono:wght@300;400;500;600;700&family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "noahbrown.io",
      "url": "https://noahbrown.io",
      "author": {
        "@type": "Person",
        "name": "Noah Brown",
        "jobTitle": "IT Engineer"
      }
    })} />
  </head>
  <body class="bg-bg text-text font-body text-[15px] leading-[1.7] overflow-x-hidden min-h-screen">
    <div class="grid grid-cols-[220px_1fr] grid-rows-[auto_1fr] min-h-screen max-md:grid-cols-[1fr]">

      {/* ===== TOP BAR ===== */}
      <div class="col-span-full bg-surface-raised border-b border-border px-4 flex items-center justify-between h-[42px]">
        <div class="flex items-center gap-4">
          <a href="/" class="font-display text-[14px] font-bold text-accent tracking-[0.03em] no-underline hover:drop-shadow-[0_0_12px_rgba(0,212,255,0.12)] transition-all">
            noahbrown.io
          </a>
          <div class="w-px h-4 bg-border"></div>
          <nav class="flex">
            <a href="/" class:list={[
              'font-mono text-[12px] px-4 py-2 tracking-[0.02em] no-underline transition-all border-b-2',
              activeTab === 'home'
                ? 'text-accent border-accent bg-[rgba(0,212,255,0.05)]'
                : 'text-text-muted border-transparent hover:text-text-dim hover:bg-accent-glow'
            ]}>home</a>
            <a href="/about/" class:list={[
              'font-mono text-[12px] px-4 py-2 tracking-[0.02em] no-underline transition-all border-b-2',
              activeTab === 'about'
                ? 'text-accent border-accent bg-[rgba(0,212,255,0.05)]'
                : 'text-text-muted border-transparent hover:text-text-dim hover:bg-accent-glow'
            ]}>about</a>
            <a href="/projects/" class:list={[
              'font-mono text-[12px] px-4 py-2 tracking-[0.02em] no-underline transition-all border-b-2',
              activeTab === 'projects'
                ? 'text-accent border-accent bg-[rgba(0,212,255,0.05)]'
                : 'text-text-muted border-transparent hover:text-text-dim hover:bg-accent-glow'
            ]}>projects</a>
          </nav>
        </div>
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-2 font-mono text-[11px] text-text-muted">
            <div class="w-1.5 h-1.5 rounded-full bg-green shadow-[0_0_6px_rgba(34,197,94,0.4)] animate-[pulse-dot_2s_ease-in-out_infinite]"></div>
            <span>online</span>
          </div>
        </div>
      </div>

      {/* ===== SIDEBAR ===== */}
      <aside class="bg-surface border-r border-border py-4 overflow-y-auto flex flex-col max-md:hidden">
        <div class="mb-6">
          <div class="font-mono text-[10px] tracking-[0.14em] uppercase text-text-muted px-4 mb-2">explorer</div>
          <a href="/" class:list={[
            'flex items-center gap-2 py-1 px-4 font-mono text-[13px] no-underline transition-all border-l-2',
            currentPath === '/' ? 'text-accent bg-[rgba(0,212,255,0.06)] border-accent' : 'text-text-dim border-transparent hover:text-text hover:bg-accent-glow hover:border-border-bright'
          ]}>
            <span class:list={['text-[10px] shrink-0', currentPath === '/' ? 'text-accent' : 'text-text-muted']}>{currentPath === '/' ? '>' : '\u2014'}</span>
            all posts <span class="ml-auto text-[11px] text-text-muted">{totalPosts}</span>
          </a>
          {sidebarCategories.map((cat) => (
            tagCounts[cat] > 0 && (
              <a href={`/blog/?tag=${cat}`} class="flex items-center gap-2 py-1 px-4 font-mono text-[13px] text-text-dim no-underline transition-all border-l-2 border-transparent hover:text-text hover:bg-accent-glow hover:border-border-bright">
                <span class="text-[10px] text-text-muted shrink-0">&mdash;</span>
                {cat} <span class="ml-auto text-[11px] text-text-muted">{tagCounts[cat]}</span>
              </a>
            )
          ))}
        </div>

        <div class="mb-6">
          <div class="font-mono text-[10px] tracking-[0.14em] uppercase text-text-muted px-4 mb-2">pages</div>
          <a href="/about/" class:list={[
            'flex items-center gap-2 py-1 px-4 font-mono text-[13px] no-underline transition-all border-l-2',
            currentPath.startsWith('/about') ? 'text-accent bg-[rgba(0,212,255,0.06)] border-accent' : 'text-text-dim border-transparent hover:text-text hover:bg-accent-glow hover:border-border-bright'
          ]}>
            <span class:list={['text-[10px] shrink-0', currentPath.startsWith('/about') ? 'text-accent' : 'text-text-muted']}>{currentPath.startsWith('/about') ? '>' : '\u2014'}</span>
            about
          </a>
          <a href="/projects/" class:list={[
            'flex items-center gap-2 py-1 px-4 font-mono text-[13px] no-underline transition-all border-l-2',
            currentPath.startsWith('/projects') ? 'text-accent bg-[rgba(0,212,255,0.06)] border-accent' : 'text-text-dim border-transparent hover:text-text hover:bg-accent-glow hover:border-border-bright'
          ]}>
            <span class:list={['text-[10px] shrink-0', currentPath.startsWith('/projects') ? 'text-accent' : 'text-text-muted']}>{currentPath.startsWith('/projects') ? '>' : '\u2014'}</span>
            projects
          </a>
        </div>

        <div class="flex-1"></div>

        <div class="px-4 pt-3 border-t border-border">
          <div class="font-display text-[12px] font-bold text-text">Noah Brown</div>
          <div class="font-mono text-[11px] text-text-muted mt-0.5">IT Engineer</div>
          <div class="flex gap-2 mt-2">
            <a href="https://github.com/noah-brown" class="font-mono text-[11px] text-text-dim no-underline px-1.5 py-0.5 border border-border rounded-sm hover:border-accent hover:text-accent hover:bg-accent-glow transition-all">github</a>
            <a href="https://www.linkedin.com/in/noahjbrown/" class="font-mono text-[11px] text-text-dim no-underline px-1.5 py-0.5 border border-border rounded-sm hover:border-accent hover:text-accent hover:bg-accent-glow transition-all">linkedin</a>
          </div>
        </div>
      </aside>

      {/* ===== MAIN CONTENT ===== */}
      <div class="bg-bg overflow-y-auto flex flex-col">
        {/* Breadcrumb bar */}
        <div class="px-6 py-2 border-b border-border flex justify-between items-center bg-surface shrink-0">
          <div class="font-mono text-[12px] text-text-muted" set:html={breadcrumb} />
          {breadcrumbMeta && (
            <div class="font-mono text-[11px] text-text-muted">{breadcrumbMeta}</div>
          )}
        </div>

        {/* Page content */}
        <main class="flex-1 p-8 max-md:p-5">
          <slot />
        </main>
      </div>
    </div>

    <script>
      document.querySelectorAll('a[href^="http"]').forEach(link => {
        if (!(link as HTMLAnchorElement).hostname.includes(location.hostname)) {
          link.setAttribute('target', '_blank');
          link.setAttribute('rel', 'noopener noreferrer');
        }
      });
    </script>
  </body>
</html>
