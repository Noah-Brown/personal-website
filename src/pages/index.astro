---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
---

<BaseLayout title="Noah Brown">
  <section class="mb-16">
    <h1 class="text-4xl font-bold mb-4">Hey, I'm Noah.</h1>
    <p class="text-lg text-text-muted leading-relaxed max-w-2xl">
      I'm a software engineer who likes building things for the web.
      This is my corner of the internet â€” a place for writing, projects, and ideas.
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
    {posts.length === 0 ? (
      <p class="text-text-muted">No posts yet. Check back soon!</p>
    ) : (
      <ul class="space-y-6">
        {posts.map((post) => (
          <li>
            <a href={`${base}blog/${post.id}/`} class="group block">
              <h3 class="text-lg font-medium text-text group-hover:text-accent transition-colors">
                {post.data.title}
              </h3>
              <time class="text-sm text-text-muted" datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              {post.data.description && (
                <p class="text-text-muted mt-1">{post.data.description}</p>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>
